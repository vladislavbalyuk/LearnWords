<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66ccff"
    tools:context="com.status.learnwords.MainActivity">

    <TextView
        android:id="@+id/TextPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dictionary file:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#bbeeff"
        android:layout_marginLeft="15dp" />

    <EditText
        android:id="@+id/Pass"
        android:enabled="false"
        android:background="#bbeeff"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ButtonPass"
        app:layout_constraintTop_toBottomOf="@+id/TextPass"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="5dp" />

    <Button
        android:id="@+id/ButtonPass"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:onClick="onOpenFileClick"
        android:textStyle="bold"
        android:background="#bbeeff"
        android:textColor="#ffffff"
        android:text="..."
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toTopOf="@+id/Pass"
        android:layout_marginEnd="15dp" />

    <Button
        android:id="@+id/ButtonStart"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:onClick="onStartClick"
        android:text="start"
        android:textStyle="bold"
        android:background="#bbeeff"
        android:textColor="#ffffff"
        android:textSize="50sp"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="@+id/ButtonPass"
        app:layout_constraintLeft_toLeftOf="@+id/Pass"
        app:layout_constraintTop_toBottomOf="@+id/Pass"/>

</android.support.constraint.ConstraintLayout>
